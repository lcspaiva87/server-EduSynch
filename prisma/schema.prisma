// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model user {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String @unique
  avatar   String @default("https://ogimg.infoglobo.com.br/in/24907109-c86-bcf/FT1086A/avatar-a-lenda-de-aang.jpg")
  password String
}

model coins {
  id                      String @id @default(auto()) @map("_id") @db.ObjectId
  name                    String @unique
  icon                    String
  priceUsd                Float
  priceBrl                Float
  brlRateChangePercentage Float
}

model newsletter {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
}
